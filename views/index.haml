.modal.hide#upload-photo-container
  %form{ :action => '/upload', :method => 'post', :enctype => "multipart/form-data" }
    .modal-header
      %button.close{ :type => "button", 'data-dismiss' =>"modal"}Ã—
      %h3  Upload your photo
    .modal-body.container-fluid
      .choose-picture.row-fluid
        %input#choose-picture{ :type => 'file', :name => 'photo'}
        #editor-canvas
          #banner
          #picture
      .color-picker.row-fluid
        %h4.title Pick your message
        .controls
          %label.one.active
            %input{ :type => 'radio', :name => 'color_scheme', :value => 'arthritis-small', :checked => 'checked' }
            First choice
          %label.two
            %input{ :type => 'radio', :name => 'color_scheme', :value => 'arthritis2-small' }
            Second Choice
          %label.three
            %input{ :type => 'radio', :name => 'color_scheme', :value => 'arthritis3-small' }
            Third Choice
    .modal-footer.generate
      %center
        %button.btn.btn-primary.btn-large#generate-btn{ :type => 'submit' } Generate your image!
%script{ :type => 'text/javascript', :src => '/javascripts/picture-loader.js' }
:javascript
  $(document).ready(function() {
    $("#upload-photo").click(function(){
      $("#upload-photo-container").modal('show');
    });
  });

