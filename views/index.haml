%form{ :action => '/upload', :method => 'post', :enctype => "multipart/form-data" }
  .choose-picture
    %h2 Upload your photo 
    %input#choose-picture{ :type => 'file', :name => 'photo'}
    #editor-canvas
      #banner
      #picture
  .color-picker
    %h2.title Pick your message
    .controls
      %label.one.active
        %input{ :type => 'radio', :name => 'color_scheme', :value => 'arthritis-small', :checked => 'checked' }
        First choice
      %label.two
        %input{ :type => 'radio', :name => 'color_scheme', :value => 'arthritis2-small' }
        Second Choice
      %label.three
        %input{ :type => 'radio', :name => 'color_scheme', :value => 'arthritis3-small' }
        Third Choice
  .generate
    %button.btn.btn-primary.btn-large{ :type => 'submit' } Generate your image!
%script{ :type => 'text/javascript', :src => '/javascripts/picture-loader.js' }
